# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=withdrawals_db

# Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d

# Withdrawal thresholds
# Requests BELOW this amount (and with low risk score) are auto-approved
AUTO_APPROVE_WITHDRAWAL_THRESHOLD=100

# Risk scoring
# Amounts >= this are flagged as "large amount" (+25 risk score)
LARGE_AMOUNT_RISK_THRESHOLD=10000

# Daily withdrawal limit per user before risk flag triggers
DAILY_WITHDRAWAL_LIMIT=50000
