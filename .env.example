# ── Application ──────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3001
ALLOWED_ORIGINS=http://localhost:3000

# ── Database (PostgreSQL) ────────────────────────────────────────────────────
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASS=postgres
DATABASE_NAME=whspr
# DATABASE_POOL_SIZE=10
