JWT_SECRET=change_me_to_a_strong_random_secret_at_least_64_chars
JWT_REFRESH_SECRET=change_me_to_a_different_strong_random_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

